@model HelsinkiNPLViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">AI Alıştırmaları</h4>
                    <p class="card-description">
                        AI alıştırmalarını buradan gerçekleştirebilirsiniz.
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label>Prompt</label>
                            <input type="text" class="form-control" asp-for="Prompt">
                        </div>
                        <div class="form-group">
                            <label>Cevap</label>
                            <textarea class="form-control" asp-for="Answer" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success me-2">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
