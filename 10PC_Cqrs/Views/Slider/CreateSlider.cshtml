@model CreateSliderCommand

@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Slider Ekleme</h4>
                    <p class="card-description">
                        Slider bölümünün ekleme işlemlerini buradan gerçekleştirebilirsiniz.
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label>Alt Başlık</label>
                            <input type="text" class="form-control" asp-for="SubTitle">
                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>Carousel Sınıfı</label>
                            <input type="text" class="form-control" asp-for="CarouselClass">
                        </div>
                        <button type="submit" class="btn btn-success me-2">Ekle</button>
                        <a href="/Slider/Index" class="btn btn-light">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
