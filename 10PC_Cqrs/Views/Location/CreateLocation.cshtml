@model CreateLocationCommand

@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Havalimanı Ekleme</h4>
                    <p class="card-description">
                        Havalimanları bölümünün ekleme işlemlerini buradan gerçekleştirebilirsiniz.
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label>Havalimanı Id</label>
                            <input type="text" class="form-control" asp-for="AirportId">
                        </div>
                        <div class="form-group">
                            <label>Havalimanı Adı</label>
                            <input type="text" class="form-control" asp-for="AirportName">
                        </div>   
                        <div class="form-group">
                            <label>IATA Kodu Adı</label>
                            <input type="text" class="form-control" asp-for="AreaCode">
                        </div>
                        <div class="form-group">
                            <label>ICAO Kodu Adı</label>
                            <input type="text" class="form-control" asp-for="AirportCode">
                        </div>
                        <div class="form-group">
                            <label>Ülke</label>
                            <input type="text" class="form-control" asp-for="Country">
                        </div>
                        <div class="form-group">
                            <label>Şehir</label>
                            <input type="text" class="form-control" asp-for="City">
                        </div>
                        <div class="form-group">
                            <label>Enlem</label>
                            <input type="text" class="form-control" asp-for="Latitude">
                        </div>
                        <div class="form-group">
                            <label>Boylam</label>
                            <input type="text" class="form-control" asp-for="Longitude">
                        </div>
                        <button type="submit" class="btn btn-success me-2">Ekle</button>
                        <a href="/About/Index" class="btn btn-light">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
