@model CreateMessageCommand

@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Mesaj Ekleme</h4>
                    <p class="card-description">
                        Mesajlar bölümünün ekleme işlemlerini buradan gerçekleştirebilirsiniz.
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label>Adınız</label>
                            <input type="text" class="form-control" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label>Soyadınız</label>
                            <input type="text" class="form-control" asp-for="Surname">
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input type="text" class="form-control" asp-for="Phone">
                        </div>
                        <div class="form-group">
                            <label>E-Mail Adresi</label>
                            <input type="text" class="form-control" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label>Konu</label>
                            <input type="text" class="form-control" asp-for="Subject">
                        </div>
                        <div class="form-group">
                            <label>Mesaj</label>
                            <textarea class="form-control" rows="5" asp-for="MessageDetail"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success me-2">Ekle</button>
                        <a href="/Message/Index" class="btn btn-light">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
