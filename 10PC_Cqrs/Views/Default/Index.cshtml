    <script>
        $(document).ready(function() {
            $("#dropOffLocation, #pickUpLocation, #carModelSelect").change(function() {
                var pickUp = $("#pickUpLocation").val();
                var dropOff = $("#dropOffLocation").val();
                var carModel = $("#carModelSelect").val();
                var infoBox = $("#distanceInfoBox");

                if (!pickUp || !dropOff || !carModel) {
                    infoBox.hide();
                    return;
                }

                if (pickUp === dropOff) {
                    infoBox.show().removeClass().addClass("alert alert-danger")
                        .text("Alış ve Teslim Havalimanı aynı olamaz!");
                    return;
                }

                // Ajax çağrısı
                $.ajax({
                    url: '/Default/GetDistanceByName',
                    data: { pickUpName: pickUp, dropOffName: dropOff, carModel: carModel },
                    type: 'GET',
                            success: function(data) {
            if (data.error) {
                infoBox.show().removeClass().addClass("alert alert-danger").text(data.error);
            } else {
                infoBox.show().removeClass().addClass("alert alert-info").html(
                    `<strong>Mesafe:</strong> ${data.distance.toFixed(2)} km<br>` +
                    `<strong>Yakıt Türü:</strong> ${data.fuelType}<br>` +
                    `<strong>Yakıt Birim Fiyatı:</strong> ${data.fuelUnitPrice.toFixed(2)} ₺<br>` +
                    `<strong>100 km Maliyeti:</strong> ${data.costPer100Km.toFixed(2)} ₺<br>` +
                    `<strong>Toplam Yakıt Maliyeti:</strong> ${data.totalFuelCost.toFixed(2)} ₺`
                );
            }
        }
        ,
                    error: function() {
                        infoBox.show().removeClass().addClass("alert alert-danger")
                            .text("Mesafe ve maliyet bilgisi alınamadı!");
                    }
                });
            });
        });
    </script>


